<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="HUMap.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HUMap.Views"
    xmlns:local="clr-namespace:HUMap">

    <TabBar>
        <ShellContent
            Title="Timetable"
            Route="TimetablePage"
            Icon="iconlistdetail.png"
            ContentTemplate="{DataTemplate views:TimetablePage}" />
        <ShellContent
            Route="MapPage"
            Title="Map"
            Icon="iconmap.png"
            ContentTemplate="{DataTemplate views:MapPage}" />
        <ShellContent
            Title="Settings"
            Icon="cog.png"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent
            Title="About"
            Icon="information.png"
            ContentTemplate="{DataTemplate views:AboutPage}" />
    </TabBar>
</Shell>